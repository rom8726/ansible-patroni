global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    tcp
    option  tcplog
    option  dontlognull
    timeout connect 5000
    timeout client  10m
    timeout server  10m

listen stats
    bind *:7000
    mode http
    stats enable
    stats uri /
    stats realm Strictly\ Private
    stats auth admin:admin

frontend patroni_frontend
    bind *:5000
    mode tcp
    default_backend patroni_backend

backend patroni_backend
    mode tcp
    option httpchk
    http-check expect status 200
    default-server inter 3s fall 3 rise 2
{% for host in groups['promoters'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:{{ postgres_port }} check port {{ patroni_port }}
{% endfor %}
