global:
  scrape_interval: 10s
  evaluation_interval: 10s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
        {% for host in groups['promoters'] %}
        - '{{ hostvars[host].ansible_host }}:9100'
        {% endfor %}

  - job_name: 'postgres_exporter'
    static_configs:
      - targets:
        {% for host in groups['promoters'] %}
        - '{{ hostvars[host].ansible_host }}:9187'
        {% endfor %}
